{
  "manifest_version": 3,
  "name": "English Speech Extension",
  "version": "0.0.26",
  "description": "英文を読み上げしてくれる拡張機能",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "en-speech": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Ctrl+Shift+N"
      },
      "description": "英文を読み上げしてくれる拡張機能"
    },
    "en-speech-slow": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S"
      },
      "description": "英文をゆっくり読み上げしてくれる拡張機能"
    },
    "en-speech-high": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Ctrl+Shift+H"
      },
      "description": "英文をはやく読み上げしてくれる拡張機能"
    }
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "commands"
  ]
}